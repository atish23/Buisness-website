<body >

<%= yield %>


<!-- jQuery -->
<script src="/assets/jquery.js" type="text/javascript"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/assets/bootstrap.min.js" type="text/javascript"></script>

<!-- Plugin JavaScript -->
