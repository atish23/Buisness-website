<%= render 'shared/navigation2'%>
<!-- multistep form -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'msform'}) do |f| %>
    <fieldset>
        <h2 class="fs-title">Log in</h2>
        <%= f.email_field :email, autofocus: true, placeholder: "Email"  %>
        <%= f.password_field :password, autocomplete: "off" , placeholder: 'Password'%>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
        <%= link_to "Log In",new_customer_session_path, class: "action-button"%>
        <%= f.submit "Sign Up",class: 'action-button' %>
    </fieldset>
<%end%>
