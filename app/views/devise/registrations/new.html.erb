<%= render 'shared/navigation2'%>
<!-- multistep form -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'msform'}) do |f| %>
    <fieldset>
      <%= devise_error_messages! %>
        <h2 class="fs-title">Sign Up</h2>
        <%= f.email_field :email, autofocus: true, placeholder: "Email"  %>
        <%= f.password_field :password, autocomplete: "off" , placeholder: 'Password'%>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>

        <input type="button" onclick="location.href='/customers/sign_in';" value="Log In"  class="action-button" />
        <%= f.submit "Sign Up",class: 'action-button' %>
    </fieldset>
<%end%>
